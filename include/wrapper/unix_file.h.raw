@filename unix_file.h
@include <fcntl.h>
@include <unistd.h>
@include <sys/ioctl.h>
@include <sys/stat.h>

@system
@name open
@arg path oflag
@vaarg 1
@body
@decl int _fd
@reteq -1 _fd
@endbody
@end

@system
@name openat
@arg fd path oflag
@vaarg 1
@body
@decl int _fd
@reteq -1 _fd
@endbody
@end

@system
@name creat
@arg path mode
@body
@decl int _fd
@reteq -1 _fd
@endbody
@end

@system
@name close
@arg fd
@body
@noreteq -1
@endbody
@end

@system
@name lseek
@arg fd offset whence
@body
@decl off_t _off
@reteq -1 _off
@endbody
@end

@system
@name read
@arg fd buf nbytes
@body
@decl ssize_t _size
@reteq -1 _size
@endbody
@end

@system
@name write 
@arg fd buf nbytes
@body
@decl ssize_t _size
@reteq -1 _size
@endbody
@end

@system
@name pread
@arg fd buf nbytes offset
@body
@decl ssize_t _size
@reteq -1 _size
@endbody
@end

@system
@name pwrite 
@arg fd buf nbytes offset
@body
@decl ssize_t _size
@reteq -1 _size
@endbody
@end

@system
@name dup
@arg fd
@body
@decl int _fd
@reteq -1 _fd
@endbody
@end

@system
@name dup2
@arg fd fd2
@body
@decl int _fd
@reteq -1 _fd
@endbody
@end

@system
@name fsync
@arg fd
@body
@noreteq -1
@endbody
@end

@system
@name fdatasync
@arg fd
@body
@noreteq -1
@endbody
@end

@system
@name fcntl
@arg fd cmd
@vaarg 1
@body
@decl int _ret
@reteq -1 _ret
@endbody
@end

@system
@name ioctl
@arg fd request
@vaarg 3
@body
@decl int _ret
@reteq -1 _ret
@endbody
@end

@system
@name stat
@arg pathname buf
@body
@noreteq -1
@endbody
@end
